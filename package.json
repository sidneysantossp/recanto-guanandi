{
  "name": "guanandi-financial-platform",
  "version": "1.0.0",
  "description": "Plataforma financeira para Associação dos Proprietários Recanto do Guanandi",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "vercel-build": "node scripts/setup-vercel-database.js && cd client && npm install && CI= npm run build && cd .. && npx prisma generate && node scripts/run-prisma-migrate.js",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "prisma:reset": "prisma migrate reset",
    "prisma:studio": "prisma studio",
    "db:migrate": "node scripts/migrate-to-mysql.js",
    "db:setup": "prisma generate && prisma db push",
    "db:seed": "node scripts/seed.js"
  },
  "keywords": [
    "financial",
    "association",
    "boleto",
    "pix",
    "dashboard"
  ],
  "author": "Guanandi Development Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.16.1",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "qrcode": "^1.5.4",
    "serverless-http": "^3.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "^5.16.1"
  }
}
